<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:elevation="4dp"
          android:layout_margin="2dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:elevation="10dp"

                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_radio_button_checked_24dp"
                android:layout_height="wrap_content" />

            <Button

                android:layout_width="match_parent"

                android:textSize="16sp"
                android:textAlignment="center"
                android:background="#FFFFFF"
                android:hint="@string/hint_start_location"
                android:id="@+id/searchview_start_location"
                android:layout_height="36dp"


                />
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"

        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView


            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:elevation="10dp"

                android:layout_marginLeft="6dp"
                android:src="@drawable/ic_place_24dp"
                android:layout_height="wrap_content" />
            <Button
                android:hint="@string/hint_end_location"

                android:singleLine="true"
                android:layout_width="match_parent"
               android:textAlignment="center"
                android:textSize="16sp"
                android:background="@color/colorPrimary"
                android:id="@+id/searchview_end_location"
                android:layout_height="36dp"


                />
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>